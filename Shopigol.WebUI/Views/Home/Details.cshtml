@model Shopigol.Core.Models.Product

@{
    ViewData["Title"] = Model.Name + " Details";
}

<h2>@Html.DisplayFor(m => m.Name)</h2>
<div>
    <div class="col-md-2">
        <img class="img-responsive" src="/images/@Model.Image" />
    </div>
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                $@Html.DisplayFor(model => model.Price)
            </dd>

            <dt></dt>
            <dd><a href="#" class="btn btn-default">Add to Basket</a></dd>

            <dt></dt>
            <dd><a asp-action="Index">Back to List</a></dd>
        </dl>
    </div>

</div>
<div class="col-md-12 clearfix"></div>
